<script>
// Afficher ou masquer le popup de l'image du projet
function showPopup(element) {
  // Cibler le popup et le contenu à cacher
  const popup = element.querySelector('.project-image-popup');
  const content = element.querySelector('.project-content');

  // Afficher le popup
  if (popup) {
    popup.style.display = 'block';
  }

  // Masquer le contenu textuel
  if (content) {
    content.style.display = 'none';
  }
}

function hidePopup(element) {
  // Cibler le popup et le contenu à réafficher
  const popup = element.querySelector('.project-image-popup');
  const content = element.querySelector('.project-content');

  // Masquer le popup
  if (popup) {
    popup.style.display = 'none';
  }

  // Réafficher le contenu textuel
  if (content) {
    content.style.display = 'block';
  }
}
</script>

