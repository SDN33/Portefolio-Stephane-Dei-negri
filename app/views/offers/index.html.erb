<script>
    $(document).ready(function() {
        // Remonter automatiquement en haut de la page au rafraîchissement
        window.scrollTo(0, 0);

        // Initialisation de Swiper
        var mySwiper = new Swiper('.swiper-container', {
            loop: true,
            slidesPerView: 1,
            spaceBetween: 2,
            pagination: { el: '.swiper-pagination', clickable: true },
            navigation: { nextEl: '.swiper-button-next', prevEl: '.swiper-button-prev' },
            autoplay: { delay: 3000, disableOnInteraction: false },
            breakpoints: {
                320: { slidesPerView: 1, spaceBetween: 10 },
                640: { slidesPerView: 2, spaceBetween: 20 },
                1024: { slidesPerView: 3, spaceBetween: 30 }
            }
        });;

        // Égalisation de la hauteur des cartes
        $('.card').matchHeight();

        // Gestion du compte à rebours
        $('#acceptPopup').click(function() {
            startCountdown();
        });

        function startCountdown() {
            let count = 3;
            const countdownElement = $('#countdown');
            $('#counter').show();
            countdownElement.text(count);

            let interval = setInterval(() => {
                count--;
                countdownElement.text(count);
                if (count <= 0) {
                    clearInterval(interval);
                    $('#counter').hide();
                    const presentationElement = $('#presentation');
                    if (presentationElement.length) {
                        presentationElement[0].scrollIntoView({ behavior: 'smooth' });
                    }
                }
            }, 1000);
        }
    });
    </script>

